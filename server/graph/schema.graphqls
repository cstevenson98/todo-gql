# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  title: String!
  description: String!
  done: Boolean!
}

type Query {
  todos: [Todo!]!
  users: [User!]!
}

type User {
  id: ID!
  name: String!
  todos: [Todo!]!
}

input NewTodo {
  title: String!
  description: String!
}

input NewUser {
  name: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
